{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "esnext",
    "noImplicitAny": false,
    "declaration": false,
    "strictNullChecks": true,
    "allowJs": false,
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "downlevelIteration": true,
    "target": "ES2018",
    "moduleResolution": "node",
    "lib": [
      "DOM",
      "ESNext",
    ],
    "types": [
      "node",
      "jest",
      "webpack-env"
    ],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/**/*",
    "**/__tests__/**/*"
  ]
}
